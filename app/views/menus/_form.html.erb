<%= form_tag menus_path, :method => 'post', remote: true, :class => "form-inline search-center" do %>
  <div class="form-group">
    <%= label_tag('menu[cuisine1]', "Cuisine 1") %><br>
    <%= select_tag 'menu[cuisine1]', options_for_select(@cuisines, selected: "Surprise Me!"), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag('menu[cuisine2]', "Cuisine 2") %><br>
    <%= select_tag 'menu[cuisine2]', options_for_select(@cuisines, selected: "Surprise Me!",), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag('menu[appetizers]', "No. of Appetizers") %><br>
    <%= number_field_tag 'menu[appetizers]', nil, in: 0...11, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= label_tag('menu[sides]', "No. of Sides") %><br>
    <%= number_field_tag 'menu[sides]', nil, in: 0...11, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= label_tag('menu[mains]', "No. of Main Dishes") %><br>
    <%= number_field_tag 'menu[mains]', nil, in: 0...11, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= label_tag('menu[desserts]', "No. of Desserts") %><br>
    <%= number_field_tag 'menu[desserts]', nil, in: 0...11, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag('menu[election]', "Who sets the menu?") %><br>
    <%= select_tag 'menu[election]', options_for_select(["It's my party!", "Let your guests vote"]), class: "form-control", id: "election-option" %>
  </div>
  <div class="form-group hidden" id="exp">
    <%= label_tag('menu[exp_date]', "election end date")%><br>
    <%= date_field_tag 'menu[exp_date]', class: "form-control" %>
  </div>

  <%= hidden_field_tag 'dinner_id', @dinner.id %>
  <div class="form-group"><br>
    
    <div class="col-md-2"></div>

    <%= label_tag %>
    <%= submit_tag "Create Menu!", class: "btn btn-primary", id:"create-menu" %>
 
  </div>
<% end %>