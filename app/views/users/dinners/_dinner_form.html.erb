<%=form_for([current_user, @dinner], :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <%= f.text_field :name, class: "form-field form-control" %><br>

  <%= f.label :location, class: "col-sm-2 control-label" %>
  <%= f.text_field :location, class: "form-field form-control" %><br>

  <%= f.label :date, class: "col-sm-2 control-label" %>
  <%= f.date_field :date, class: "form-field form-control" %><br>

  <%= f.label :time, class: "col-sm-2 control-label" %>
  <%= f.time_field :time, class: "form-field form-control" %><br>

  <%= f.submit class: "col-sm-offset-2 btn btn-primary" %><br><br>
  <%= link_to "Cancel", user_path(current_user), class: "col-sm-offset-2 btn btn-danger" %>
<%end%>
