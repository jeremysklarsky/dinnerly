<div class="well well-lg col-md-10 col-md-offset-1 text-center">
  <% if current_user == @dinner.host %>
    <div class="btn btn-primary edit-dinner-details">
      <%= link_to edit_user_dinner_path(current_user, @dinner) do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>
    </div>
  <% end %>

  <h2 class="welcome-msg"><%= @dinner.name%></h2>
  <h4><%= @dinner.location %></h4>
  <h5><%= @dinner.date.strftime("%B %d, %Y")%></h5>
  <h5><%= @dinner.time.strftime("%l:%M %p")%></h5>
  <hr>

  <div id="menu">
  <% if @dinner.menu %>  
    <% if @dinner.menu.election %>
      <%= render 'menus/menu_election' %>
    <% else %>
      <%= render 'menus/menu' %>
    <% end %>
  <% else %>
      <%= render 'menus/form' %>
    <% end %>
  </div>
 
</div>

