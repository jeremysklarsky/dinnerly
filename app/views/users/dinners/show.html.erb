<div class="well well-lg col-md-10 col-md-offset-1 text-center">
  <h3 class="welcome-msg"><%= @dinner.name%></h3>
  <h4 class="welcome-msg"><%= @dinner.location %></h4>
  <h5 class="welcome-msg"><%= @dinner.date.strftime("%B %d, %Y")%></h5>
  <h5 class="welcome-msg"><%= @dinner.time.strftime("%l:%M %p")%></h5>
  <br>
  <div class="btn btn-primary">
    <!-- <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> -->
    <%= link_to "Edit dinner details", edit_user_dinner_path(current_user, @dinner) if current_user == @dinner.host %>
  </div>

  <div id="menu">
  <% if @dinner.menu %>  
    <% if @dinner.menu.election %>
      <%= render 'menus/menu_election' %>
    <% else %>
      <%= render 'menus/menu' %>
    <% end %>
  <% else %>
      <%= render 'menus/form' %>
    <% end %>
  </div>
 
</div>

