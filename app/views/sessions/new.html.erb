<div class="col-lg-6 col-lg-offset-3">
  <div class="well bs-component">
    <h3 class="welcome-msg col-lg-offset-3">Log in</h3>
      <p id="notice" class="col-lg-offset-3"><%= flash[:notice] %></p>
      <%= form_for(:user, url: sessions_path) do |f| %>
      <p>
      <%= f.label :email, class: "col-sm-3 control-label" %>
      <%= f.text_field :email, class: "form-field form-control" %>
      </p>
      <p>
      <%= f.label :password, class: "col-sm-3 control-label" %>
      <%= f.password_field :password, class: "form-field form-control" %>
      </p>
      <%= f.submit "Log In", class: "col-sm-offset-3 btn btn-primary" %>
      <% end %>
      <p></p>
      <p class="col-lg-offset-3">Don't have an account with us? <%=link_to "Sign up!", signup_path%></p>
  
      <%= link_to "Forgot your password?", reset_password_path, class: "col-lg-offset-3" %>
  </div>



</div>

   